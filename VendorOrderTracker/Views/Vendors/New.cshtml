@{
  Layout = "_Layout";
}
<h3>Fill out this form to become one of our vendors</h3>
<form action="/vendors" method="post">
  <label for="vName">Name:</label>
  <input id="vName" name="vName" type="text" placeholder="Babbo's Bakery" required>
  <br />
  <label for="vDescription">Description:</label>
  <textarea id="vDescription" name="vDescription" placeholder="Wholesale purveyor of breads and pastries" required></textarea>
  <br />
  <label for="vPhone">Phone number:</label>
  <input id="vPhone" name="vPhone" type="number" placeholder="555-867-5309" required>
  <button type="submit" class="button-62" role="button">Join</button>
</form>
<br />
<a href="/vendors" class="button-62">Vendor List</a>